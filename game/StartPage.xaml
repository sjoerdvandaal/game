<Window x:Class="game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="MainWindow" Height="515" Width="800">

    <Grid>
        <!-- Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- De titel -->
        <Label Grid.Row="0" Grid.ColumnSpan="3"
               FontFamily="Comic Sans MS"
               FontSize="36"
               FontWeight="Bold"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Content="My Epic Game" />

        <!-- De buttons -->
        <Button Grid.Row="1" Grid.Column="1" Click="Play_Button_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Comic Sans MS" FontSize="32">Play</Button>
        <Button Grid.Row="2" Grid.Column="1" Click="High_Scores_Button_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Comic Sans MS" FontSize="32">High Scores</Button>
        <Button Grid.Row="3" Grid.Column="1" Click="Settings_Button_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Comic Sans MS" FontSize="32">Settings</Button>
        <Button Grid.Row="4" Grid.Column="1" Click="Quit_Button_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Comic Sans MS" FontSize="32">Quit</Button>
    </Grid>
</Window>

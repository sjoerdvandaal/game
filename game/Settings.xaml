<Window x:Class="game.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Titel -->
            <RowDefinition Height="80"/>
            <!-- Music -->
            <RowDefinition Height="80"/>
            <!-- Volume (optional) -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="60"/>
            <!-- Back -->
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Label Content="Settings"
               FontFamily="Comic Sans MS"
               FontSize="32"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <!-- Music button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Music" FontSize="24" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button x:Name="MusicOnButton" Content="On" Width="80" Height="40" FontSize="18" Margin="0,0,10,0" Click="MusicOnButton_Click"/>
            <Button x:Name="MusicOffButton" Content="Off" Width="80" Height="40" FontSize="18" Click="MusicOffButton_Click"/>
        </StackPanel>

        <!-- Volume button (optional) -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Volume" FontSize="24" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button x:Name="VolumeOnButton" Content="On" Width="80" Height="40" FontSize="18" Margin="0,0,10,0" Click="VolumeOnButton_Click"/>
            <Button x:Name="VolumeOffButton" Content="Off" Width="80" Height="40" FontSize="18" Click="VolumeOffButton_Click"/>
        </StackPanel>

        <!-- Back button -->
        <Button Content="Back"
                Grid.Row="4"
                Width="120"
                Height="50"
                FontFamily="Comic Sans MS"
                FontSize="20"
                HorizontalAlignment="Center"
                Click="BackButton_Click"/>
    </Grid>
</Window>
